<!--pages/6ScrollView/6ScrollView.wxml-->

<!-- scroll-view : 用于实现局部滚动 -->
<!-- 1.水平滚动 scroll-x -->
<scroll-view class='container1' scroll-x="true">
  <view wx:for="{{10}}" class='item1'>{{item}}</view>
</scroll-view>

<!-- 2.垂直滚动 scroll-y -->
<scroll-view class='container2' scroll-y="true">
  <view wx:for="{{10}}" class='item2'>{{item}}</view>
</scroll-view>

<!-- 3.其他补充 bindscroll : 滚动监听  -->
<scroll-view class='container2' scroll-y="true" bindscroll="handleScroll">
  <view wx:for="{{10}}" class='item2'>{{item}}</view>
</scroll-view>